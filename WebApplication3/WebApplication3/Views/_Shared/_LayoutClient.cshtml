    <script>
        var gioHang = [];
        $("#logout").click(function () {
            console.log("lol");
            localStorage.clear();
            window.location.href = '@Url.Action("Index", "Account", new { isLogout = true})';
        });
        if (localStorage.getItem("giohang")) {
            gioHang = JSON.parse(localStorage.getItem("giohang"));
        } else {
            gioHang = [];
        }
        function addCart(id, name, price, imageUrl, quantity = 1) {
            var checkExist;
            if (gioHang.length) {
                for (i in gioHang) {
                    console.log("tang uantity cua: ", i);
                    if (gioHang[i].shoeId === +id) {
                        gioHang[i].quantity += +quantity;
                        checkExist = true;
                    }
                }
            }

            if (!checkExist) {
                console.log("new sp");
                var sanpham = { shoeId: +id, name, price: +price, quantity: +quantity, imageUrl };
                gioHang.push(sanpham);
            }
            window.localStorage.setItem("giohang", JSON.stringify(gioHang));
            document.getElementById("cartCount").innerHTML = "(" + JSON.parse(localStorage.getItem("giohang")).length + ")";
        }

        function showMenuSort() {
            $("#menuSort").toggle();
        }
    </script>
